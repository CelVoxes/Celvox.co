{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "#root/*": ["./*"]
    },
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "sourceMap": true,

    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  }
}
